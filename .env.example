# =============================================================================
# Forge Platform - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Core Configuration
# -----------------------------------------------------------------------------
FORGE_DATA_DIR=/home/forge/.forge/data
FORGE_LOG_LEVEL=info
FORGE_HTTP_PORT=8080

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
FORGE_DB_PATH=
FORGE_DB_MAX_CONNECTIONS=10
FORGE_DB_CACHE_SIZE=64000

# -----------------------------------------------------------------------------
# GCP Cloud Monitoring Configuration
# -----------------------------------------------------------------------------
# Project ID for GCP Cloud Monitoring (required for GCP integration)
FORGE_GCP_PROJECT_ID=

# Path to service account credentials JSON file (optional if using ADC)
# Leave empty to use Application Default Credentials (ADC)
FORGE_GCP_CREDENTIALS_PATH=

# GCP region for Cloud Run deployment
FORGE_GCP_REGION=southamerica-east1

# Metric prefix for custom metrics
FORGE_GCP_METRIC_PREFIX=custom.googleapis.com/forge

# Flush interval in seconds
FORGE_GCP_FLUSH_INTERVAL=60

# Batch size for metric export
FORGE_GCP_BATCH_SIZE=200

# -----------------------------------------------------------------------------
# Cloud Storage Configuration (for backups)
# -----------------------------------------------------------------------------
# GCS bucket name for backups
FORGE_GCS_BUCKET=

# Backup retention in days
FORGE_BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# JWT secret key (generate with: openssl rand -hex 32)
FORGE_JWT_SECRET=

# Session timeout in hours
FORGE_SESSION_TIMEOUT_HOURS=24

# API key hash salt (generate with: openssl rand -hex 16)
FORGE_API_KEY_SALT=

# -----------------------------------------------------------------------------
# AI Configuration
# -----------------------------------------------------------------------------
# Ollama API endpoint
FORGE_OLLAMA_URL=http://localhost:11434

# Default AI model
FORGE_AI_MODEL=llama3.2

# -----------------------------------------------------------------------------
# Alerting Configuration
# -----------------------------------------------------------------------------
# Slack webhook URL for notifications
FORGE_SLACK_WEBHOOK_URL=

# PagerDuty integration key
FORGE_PAGERDUTY_KEY=

# SMTP configuration for email alerts
FORGE_SMTP_HOST=
FORGE_SMTP_PORT=587
FORGE_SMTP_USERNAME=
FORGE_SMTP_PASSWORD=
FORGE_SMTP_FROM=

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Enable debug mode (never enable in production!)
FORGE_DEBUG=false

# Enable profiling endpoints
FORGE_PROFILING_ENABLED=false

